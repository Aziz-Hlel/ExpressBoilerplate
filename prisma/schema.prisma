generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
}

enum Role {
  USER
  WAITER
  ADMIN
  SUPER_ADMIN
}

model User {
  uid   String  @id
  name  String?
  email String? @unique
  role  Role    @default(USER)

  isEmailVerified Boolean @default(false)
  isDeleted       Boolean @default(false)

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
}
